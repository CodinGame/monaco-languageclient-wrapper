{
  "name": "@codingame/monaco-languageclient-wrapper",
  "version": "0.0.0-semantic-release",
  "private": false,
  "description": "Enhanced Monaco editor with TextMate grammars and more",
  "scripts": {
    "test": "npx jest",
    "test:watch": "jest --watch",
    "build": "npm run test && npm run compile && npm run generate-types",
    "compile": "node --experimental-json-modules ./node_modules/.bin/rollup --config rollup.config.ts --configPlugin typescript",
    "generate-types": "tsc --project tsconfig.types.json && node --experimental-json-modules ./node_modules/.bin/rollup --config rollup.types.config.ts --configPlugin typescript && rm -rf ./dist/types",
    "preprepare": "./scripts/install-extensions"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CodinGame/monaco-languageclient-wrapper"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist/",
    "stats.html"
  ],
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@codingame/monaco-editor-wrapper": "^3.5.2",
    "monaco-editor": "npm:@codingame/monaco-editor@0.34.0",
    "vscode": "npm:@codingame/monaco-vscode-api@~1.69.12",
    "vscode-languageserver-protocol": "^3.17.2",
    "vscode-ws-jsonrpc": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.20.2",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-optional-chaining": "7.18.9",
    "@babel/plugin-transform-modules-commonjs": "^7.19.6",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@babel/runtime": "7.20.1",
    "@codingame/eslint-config": "^1.1.6",
    "@codingame/tsconfig": "^1.1.1",
    "@rollup/plugin-alias": "4.0.2",
    "@rollup/plugin-babel": "6.0.2",
    "@rollup/plugin-commonjs": "23.0.2",
    "@rollup/plugin-eslint": "9.0.1",
    "@rollup/plugin-json": "5.0.1",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/jest": "^29.2.2",
    "@types/once": "^1.4.0",
    "@types/vscode": "~1.69.1",
    "@typescript-eslint/eslint-plugin": "5.42.1",
    "@typescript-eslint/parser": "5.42.1",
    "browser-resolve": "^2.0.0",
    "canvas": "^2.10.2",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "delay": "^5.0.0",
    "eslint": "8.27.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "^27.1.4",
    "eslint-plugin-n": "^15.5.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.3.0",
    "jest-environment-jsdom": "^29.3.0",
    "js-cleanup": "^1.2.0",
    "monaco-languageclient": "^4.0.1",
    "once": "^1.4.0",
    "proxy-polyfill": "^0.3.2",
    "recast": "^0.21.5",
    "rollup": "3.2.5",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-polyfill-node": "^0.11.0",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-visualizer": "5.8.3",
    "tslib": "^2.4.1",
    "typescript": "4.8.4",
    "vscode-languageserver": "^8.0.2",
    "vscode-languageserver-protocol": "^3.17.2"
  },
  "resolutions": {
    "eslint": "8.27.0"
  },
  "browserslist": [
    "defaults",
    "chrome >= 59",
    "firefox >= 68",
    "safari >= 12",
    "not IE 11",
    "not IE_Mob 11"
  ],
  "jest": {
    "resolver": "<rootDir>/jest/resolver.js",
    "testEnvironment": "jest-environment-jsdom",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "setupFiles": [
      "<rootDir>/browserMock.js"
    ],
    "transformIgnorePatterns": [
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "transform": {
      "^(?!.*\\.(js|ts|css|json)$)": "<rootDir>/jest/fileTransform.js",
      "^.+\\.css$": "<rootDir>/jest/cssTransform.js",
      "^.+\\.(js|ts)$": [
        "<rootDir>/node_modules/babel-jest",
        {
          "configFile": "./babel.test.config.js"
        }
      ]
    },
    "moduleNameMapper": {
      "^monaco-editor$": "monaco-editor/esm/vs/editor/editor.api",
      "^monaco-editor-core$": "monaco-editor/esm/vs/editor/editor.api"
    }
  },
  "volta": {
    "node": "16.17.0",
    "npm": "8.19.0"
  }
}
