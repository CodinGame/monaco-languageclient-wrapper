{
  "name": "@codingame/monaco-languageclient-wrapper",
  "version": "0.0.0-semantic-release",
  "private": false,
  "description": "Enhanced Monaco editor with TextMate grammars and more",
  "scripts": {
    "test": "npx jest",
    "test:watch": "jest --watch",
    "build": "npm run test && npm run compile && npm run generate-types",
    "compile": "rollup --config rollup.config.ts --configPlugin typescript",
    "generate-types": "tsc --project tsconfig.types.json && rollup --config rollup.types.config.ts --configPlugin typescript && rm -rf ./dist/types",
    "preprepare": "./scripts/install-extensions"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CodinGame/monaco-languageclient-wrapper"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist/",
    "stats.html"
  ],
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@codingame/monaco-editor-wrapper": "^2.2.1",
    "vscode": "npm:@codingame/monaco-vscode-api@~1.67.12",
    "vscode-languageserver-protocol": "^3.17.2",
    "vscode-ws-jsonrpc": "^1.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.18.9",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-optional-chaining": "7.18.9",
    "@babel/plugin-transform-modules-commonjs": "^7.18.6",
    "@babel/preset-env": "7.18.9",
    "@babel/preset-typescript": "7.18.6",
    "@babel/runtime": "7.18.9",
    "@codingame/eslint-config": "^1.1.6",
    "@codingame/tsconfig": "^1.1.0",
    "@rollup/plugin-alias": "3.1.9",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-commonjs": "22.0.1",
    "@rollup/plugin-eslint": "8.0.2",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/jest": "^28.1.6",
    "@types/once": "^1.4.0",
    "@types/vscode": "~1.67.0",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/parser": "5.30.7",
    "browser-resolve": "^2.0.0",
    "canvas": "^2.9.3",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "delay": "^5.0.0",
    "eslint": "8.20.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "js-cleanup": "^1.2.0",
    "monaco-languageclient": "^2.1.0",
    "proxy-polyfill": "^0.3.2",
    "recast": "^0.21.1",
    "rollup": "2.77.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-polyfill-node": "^0.10.1",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-visualizer": "5.7.1",
    "rollup-plugin-web-worker-loader": "1.6.1",
    "tslib": "^2.4.0",
    "typescript": "4.7.4",
    "vscode-languageserver": "^8.0.2",
    "vscode-languageserver-protocol": "^3.17.2"
  },
  "resolutions": {
    "eslint": "8.20.0"
  },
  "browserslist": [
    "defaults",
    "chrome >= 59",
    "firefox >= 68",
    "safari >= 12",
    "not IE 11",
    "not IE_Mob 11"
  ],
  "jest": {
    "resolver": "<rootDir>/jest/resolver.js",
    "testEnvironment": "jest-environment-jsdom",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "setupFiles": [
      "<rootDir>/browserMock.js"
    ],
    "transformIgnorePatterns": [
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "transform": {
      "^(?!.*\\.(js|ts|css|json)$)": "<rootDir>/jest/fileTransform.js",
      "^.+\\.css$": "<rootDir>/jest/cssTransform.js",
      "^.+\\.(js|ts)$": [
        "<rootDir>/node_modules/babel-jest",
        {
          "configFile": "./babel.test.config.js"
        }
      ]
    },
    "moduleNameMapper": {
      "^monaco-editor$": "monaco-editor/esm/vs/editor/editor.api",
      "^monaco-editor-core$": "monaco-editor/esm/vs/editor/editor.api"
    }
  },
  "volta": {
    "node": "16.14.0",
    "npm": "8.5.0"
  }
}
