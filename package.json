{
  "name": "@codingame/monaco-languageclient-wrapper",
  "version": "0.0.0-semantic-release",
  "private": false,
  "description": "Enhanced Monaco editor with TextMate grammars and more",
  "scripts": {
    "test": "npx jest",
    "test:watch": "jest --watch",
    "build": "npm run test && rollup --config rollup.config.ts --configPlugin typescript && npm run generate-types",
    "generate-types": "tsc --project tsconfig.types.json && rollup --config rollup.types.config.ts --configPlugin typescript && rm -rf ./dist/types"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CodinGame/monaco-languageclient-wrapper"
  },
  "moduleResolution": "node",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist/",
    "stats.html"
  ],
  "types": "dist/index.d.ts",
  "dependencies": {
    "@codingame/monaco-editor-wrapper": "^1.13.1",
    "@codingame/monaco-jsonrpc": "^0.3.1",
    "once": "^1.4.0",
    "sweetalert": "^2.1.2",
    "vscode-languageserver-protocol": "^3.16.0"
  },
  "devDependencies": {
    "@babel/core": "7.17.9",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/plugin-proposal-optional-chaining": "7.16.7",
    "@babel/plugin-transform-modules-commonjs": "^7.17.9",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@codingame/monaco-jsonrpc": "^0.3.1",
    "@codingame/monaco-languageclient": "^0.17.4",
    "@babel/runtime": "7.17.9",
    "@rollup/plugin-alias": "3.1.9",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-commonjs": "21.0.3",
    "@rollup/plugin-eslint": "8.0.2",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.2.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/jest": "^27.4.1",
    "@types/once": "^1.4.0",
    "@types/rollup-plugin-node-builtins": "^2.1.2",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "canvas": "^2.9.1",
    "eslint": "8.13.0",
    "eslint-config-standard": "17.0.0-1",
    "eslint-config-standard-jsx": "11.0.0-1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "jest": "^27.5.1",
    "monaco-languageclient": "^0.18.1",
    "proxy-polyfill": "^0.3.2",
    "rollup": "2.70.2",
    "rollup-plugin-dts": "^4.2.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-visualizer": "5.6.0",
    "rollup-plugin-web-worker-loader": "1.6.1",
    "tslib": "^2.3.1",
    "typescript": "4.6.3",
    "vscode-languageserver-protocol": "^3.16.0",
    "vscode-languageserver": "^7.0.0"
  },
  "resolutions": {
    "eslint": "8.13.0"
  },
  "browserslist": [
    "defaults",
    "chrome >= 59",
    "firefox >= 68",
    "safari >= 12",
    "not IE 11",
    "not IE_Mob 11"
  ],
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "setupFiles": [
      "<rootDir>/browserMock.js"
    ],
    "transformIgnorePatterns": [
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "transform": {
      "^(?!.*\\.(js|ts|css|json)$)": "<rootDir>/jest/fileTransform.js",
      "^.+\\.css$": "<rootDir>/jest/cssTransform.js",
      "^.+\\.(js|ts)$": [
        "<rootDir>/node_modules/babel-jest",
        {
          "configFile": "./babel.test.config.js"
        }
      ]
    },
    "moduleNameMapper": {
      "^vscode$": "monaco-languageclient/lib/vscode-compatibility",
      "^monaco-editor$": "monaco-editor/esm/vs/editor/edcore.main",
      "^monaco-editor-core$": "monaco-editor/esm/vs/editor/edcore.main"
    }
  },
  "volta": {
    "node": "16.14.0",
    "npm": "8.5.0"
  }
}
