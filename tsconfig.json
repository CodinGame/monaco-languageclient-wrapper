{
  "extends": "@codingame/tsconfig",
  "compilerOptions": {
    "baseUrl": "./src",
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "noEmit": true,
    "paths": {
      "app/*": [
        "*"
      ],
      "extensions/*": [
        "../extensions/*"
      ]
    },
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src", "rollup", "update-extensions.ts", "rollup.config.ts", "rollup.types.config.ts"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}